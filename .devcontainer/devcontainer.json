{
	"name": "Go",
	"image": "mcr.microsoft.com/devcontainers/go:1-1.23-bookworm",
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.go",
				"hashicorp.terraform"
			]
		}
	},
	"features": {
		"aws-cli": "latest",
		"terraform": {
			"version": "1.10.5"
		},
		"kubectl-helm-minikube": {
			"version": "1.30.0"
		}
	},
	"mounts": [
	    "source=${localEnv:HOME}/.aws,target=/home/vscode/.aws,type=bind"
	],
	"postCreateCommand": "sudo -u root bash ./.devcontainer/postCommand.sh"
}